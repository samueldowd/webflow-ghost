<nav id="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-post pagination nav-link" href="{{page_url prev}}">&larr; Newer Posts</a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts pagination nav-link" href="{{page_url next}}">Older Posts &rarr;</a>
    {{/if}}
</nav>